@model IEnumerable<ForestryClubApp.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<center>
    <div style="width: 80%; margin-top: 20px; border: 1px solid #007bff; padding: 20px; border-radius: 10px;">
        <h2 style="color: #007bff;">Index</h2>

        <p>
            @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-primary" })
        </p>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="background-color: #007bff; color: #fff;">Category Name</th>
                    <th style="background-color: #007bff; color: #fff;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category_name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Catergory_id }, new { @class = "btn btn-warning btn-sm", style = "margin-right: 5px;" })
                            @Html.ActionLink("Details", "Details", new { id = item.Catergory_id }, new { @class = "btn btn-info btn-sm", style = "margin-right: 5px;" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Catergory_id }, new { @class = "btn btn-danger btn-sm", style = "margin-right: 5px;" })
                            @*@Html.ActionLink("Custom", "Custom", new { id = item.Catergory_id }, new { @class = "btn btn-success btn-sm", style = "margin-right: 5px;" })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</center>

<center>
    <a href="@Url.Action("AdminDash", "AdminTables")" style="display: inline-block; padding: 10px 20px; font-size: 16px; text-align: center; text-decoration: none; background-color: #007bff; color: white; border: 1px solid #007bff; border-radius: 5px; transition: background-color 0.3s ease;">Back To Dashboard</a>
</center>


