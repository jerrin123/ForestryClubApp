@model ForestryClubApp.Models.User

@{
    ViewBag.Title = "Login";
}




<style>
    /* Style for the form container */
    .form-container {
        max-width: 800px;
        margin: 0 auto;
        border: 1px solid #ccc;
        padding: 20px;
        display: flex;
    }

    /* Style for the form labels */
    .form-horizontal label {
        margin-bottom: 10px;
    }

    /* Style for the form inputs */
    .form-horizontal input {
        width: 100%;
        margin-bottom: 10px;
    }

    /* Style for the submit button */
    .form-horizontal .btn-default {
        background-color: #007bff;
        color: #fff;
    }

    /* Style for the image container */
    .image-container {
        flex: 1;
        padding: 20px;
    }

        /* Style for the image */
        .image-container img {
            max-width: 100%;
            height: auto;
        }

    /* Style for the login container */
    .login-container {
        flex: 1;
        padding: 20px;
    }
</style>


<br />
<div class="form-container">
    <div class="image-container">
        <!-- Set your image source -->
        <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" alt="Your Image" />
    </div>

    <div class="login-container">
        <center>
            <h2>Login</h2>
        </center>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.UserEmail, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your username" } })
                    @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UserPassword, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your password", type = "password" } })
                    @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        }

        <div style="text-align: center;">
            @Html.ActionLink("REGISTER", "SignUP", null, new { @class = "btn btn-primary", style = "font-weight: 700; color: white;" })
        </div>
    </div>
</div>


@section scripts {
    <script>
        $(document).ready(function () {


            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                    alert('@TempData["ErrorMessage"]');
                </text>
            }
        });
    </script>
}





